<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".JoinEvent">

    <!-- Register progress -->
    <ProgressBar android:id="@+id/join_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/join_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/linear_join_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <EditText android:id="@+id/ticketNumber" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Ticket Number"
                android:imeActionLabel="Ticket Number"
                android:imeOptions="actionUnspecified" android:inputType="textNoSuggestions"
                android:maxLines="1" android:singleLine="true" />

            <Button android:id="@+id/scan_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="Scan ticket number"
                android:textStyle="bold" />

            <Button android:id="@+id/join_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="Join"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
